#!/usr/bin/env bash

# Current Theme
dir="$HOME/.config/rofi/themes"

# CMDs
host=$(hostname)

# Options
shutdown='  Shutdown'
reboot='  Reboot'
lock='  Lock'
suspend='󰒲  Suspend'
logout='󰍃  Logout'
yes='󰄳 Yes'
no='󰜺 No'

# Rofi CMD
rofi_cmd() {
	# rofi -dpi 192 -dmenu \
	rofi -dmenu \
		-p "$host" \
		-theme ${dir}/powermenu.rasi
}

# Confirmation CMD
confirm_cmd() {
	# rofi -dpi 192 -theme-str 'window {location: center; anchor: center; fullscreen: false; width: 450px;}' \
	rofi -theme-str 'window {location: center; anchor: center; fullscreen: false; width: 450px;}' \
		-theme-str 'mainbox {children: [ "message", "listview" ];}' \
		-theme-str 'listview {columns: 2; lines: 1;}' \
		-theme-str 'element-text {horizontal-align: 0.5;}' \
		-theme-str 'textbox {horizontal-align: 0.5;}' \
		-dmenu \
		-p 'Confirmation' \
		-mesg 'Are you Sure?' \
		-theme ${dir}/powermenu.rasi
}

# Ask for confirmation
confirm_exit() {
	echo -e "$yes\n$no" | confirm_cmd
}

# Pass variables to rofi dmenu
run_rofi() {
	echo -e "$shutdown\n$reboot\n$logout\n$lock\n$suspend" | rofi_cmd
}

lock_command() {
	i3lock-color --blur 5 --ringver-color "#9ccfd8" --ringwrong-color "#eb6f92" --ring-color "#c4a7e7" --insidever-color "#3e8fb0" --insidewrong-color "#eb6f92" --noinput-text "Empty" --indicator --clock --time-color "#4DD0E1" --date-color "#4DD0E1" --wrong-text "Error" --inside-color "#1a1b26D9"
}

# Execute Command
run_cmd() {
	selected="$(confirm_exit)"
	if [[ "$selected" == "$yes" ]]; then
		if [[ $1 == '--shutdown' ]]; then
			systemctl poweroff
		elif [[ $1 == '--reboot' ]]; then
			systemctl reboot
		elif [[ $1 == '--suspend' ]]; then
			mpc -q pause
			amixer set Master mute
			lock_command
			systemctl suspend
		elif [[ $1 == '--logout' ]]; then
			hyprctl dispatch exit
		elif [[ $1 == '--lock' ]]; then
			lock_command
		fi
	else
		exit 0
	fi
}

# Actions
chosen="$(run_rofi)"
case ${chosen} in
$shutdown)
	run_cmd --shutdown
	;;
$reboot)
	run_cmd --reboot
	;;
$lock)
	run_cmd --lock
	;;
$suspend)
	run_cmd --suspend
	;;
$logout)
	run_cmd --logout
	;;
esac
